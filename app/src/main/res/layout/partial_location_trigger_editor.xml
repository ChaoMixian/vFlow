<?xml version="1.0" encoding="utf-8"?>
<!-- 位置触发器编辑器布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 触发事件选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="触发事件"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入时"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离开时"
            style="@style/Widget.Material3.Chip.Filter" />
    </com.google.android.material.chip.ChipGroup>

    <!-- 位置坐标输入 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位置坐标"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="纬度">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:text="39.9042" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="经度">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:text="116.4074" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- 获取当前位置按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_get_current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用当前位置"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:icon="@android:drawable/ic_menu_mylocation" />

    <!-- 半径设置 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="触发半径"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 米"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        android:textColor="?android:attr/textColorSecondary" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="50.0"
        android:valueTo="5000.0"
        android:stepSize="50.0"
        android:value="500.0"
        android:layout_marginBottom="16dp" />

    <!-- 位置名称 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位置名称（可选）"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="例如：家、公司、学校">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
