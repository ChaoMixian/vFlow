<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/input_node"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_parameter_node"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/output_node"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_parameter_node"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/parameter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/input_node"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        tools:text="参数名称" />

    <FrameLayout
        android:id="@+id/parameter_value_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/parameter_name"
        android:layout_toStartOf="@id/output_node"
        android:minWidth="60dp" />

</RelativeLayout>