<?xml version="1.0" encoding="utf-8"?>
<!-- 收藏工作流悬浮窗布局 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题栏 - 可拖拽 -->
        <LinearLayout
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/float_window_header_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- 图标 -->
            <ImageView
                android:id="@+id/drag_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/rounded_drag_indicator_24"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:ignore="ContentDescription" />

            <!-- 标题 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作流"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- 关闭按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="关闭"
                app:icon="@drawable/ic_close"
                app:iconSize="20dp" />
        </LinearLayout>

        <!-- 分隔线 -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 工作流列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_workflows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:maxHeight="300dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:itemCount="4"
            tools:listitem="@layout/item_workflow_float_panel" />

        <!-- 空状态提示 -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="暂无收藏的工作流"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
