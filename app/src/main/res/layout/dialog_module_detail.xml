<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模块详情"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tv_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            tools:text="ID: vflow.user.example" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="输入参数 (Inputs)"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tv_detail_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_widget_rounded"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:lineSpacingExtra="4dp"
            android:padding="12dp"
            android:text="无"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:fontFamily="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="输出变量 (Outputs)"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tv_detail_outputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_widget_rounded"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:lineSpacingExtra="4dp"
            android:padding="12dp"
            android:text="无"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/btn_close_dialog"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="关闭" />

    </LinearLayout>
</ScrollView>